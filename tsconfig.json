{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"lib": ["ES2021"],
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["bin", "lib", "config/**/*.d.ts"],
	"exclude": ["dist", "cdk.out", "node_modules"]
}
